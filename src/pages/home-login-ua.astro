            myTicketsBoxText="<p>Усього учасників: <span class='ticket-participants'>235&nbsp;6589</span></p><p>Середня кількість квитків на учасника: <span class='ticket-average'>15</span></p>"
            buttonText="Переглянути мої квитки"
            items={myTickets}
            tableParamName="Замовлення"
            tableValueName="Квитки"
        ></MyTickets>

        <Instructions
            title="Як взяти участь?"
