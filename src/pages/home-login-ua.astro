        statisticTextLast="у розіграші:"
        statisticValue="135&nbsp;658&nbsp;224"
        title="<span class='u-text-accent'>Лут</span>ерея"
        text="Торгуйте на&nbsp;FunPay з&nbsp;15&nbsp;грудня по&nbsp;15&nbsp;січня та&nbsp;беріть участь у&nbsp;розіграші корисного луту!"
        buttonText="Взяти участь"
        buttonTextLogin="Мої квитки"
        countdownTitle="До кінця залишилося:"
        countdownDays="днів"
        countdownHours="годин"
        countdownMinutes="хвилин"
        isLogin={true}
    ></Promo>


    <div class="container">
        <Prizes
            items={prizes}
            modalText="Хочете бустанути свої шанси?<br> Торгуйте на&nbsp;FunPay"
            buttonText="Іду торгувати"
